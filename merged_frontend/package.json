{
  "name": "merged-frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "frontend",
    "embed-frontend",
    "shared-components"
  ],
  "scripts": {
    "dev:frontend": "cd frontend && npm run dev",
    "dev:embed": "cd embed-frontend && npm run dev",
    "dev:both": "concurrently \"npm run dev:frontend\" \"npm run dev:embed\"",
    "build:frontend": "cd frontend && npm run build",
    "build:embed": "cd embed-frontend && npm run build",
    "build:both": "npm run build:frontend && npm run build:embed",
    "preview:frontend": "cd frontend && npm run preview",
    "preview:embed": "cd embed-frontend && npm run preview",
    "install:all": "npm install && cd frontend && npm install && cd ../embed-frontend && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}